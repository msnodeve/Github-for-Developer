<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainFragment">


    <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/main_top_scalable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="480"
            app:scale_base_width="1080"
            tools:ignore="MissingPrefix">

        <ImageView
                android:id="@+id/main_image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gfd_logo"
                app:scale_height="200"
                app:scale_left="30"
                app:scale_top="30"
                app:scale_width="200" />


        <TextView
                android:id="@+id/main_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:text="helloGfd"
                app:scale_height="100"
                app:scale_left="270"
                app:scale_textsize="55"
                app:scale_top="40"
                app:scale_width="500" />

        <TextView
                android:id="@+id/main_tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_thin"
                android:gravity="right"
                android:text="2020-01-01"
                app:scale_height="100"
                app:scale_left="750"
                app:scale_textsize="35"
                app:scale_top="20"
                app:scale_width="300" />

        <ImageView
                android:id="@+id/main_image_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_location"
                app:scale_height="40"
                app:scale_left="270"
                app:scale_top="150"
                app:scale_width="40" />

        <TextView
                android:id="@+id/main_tv_user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_light"
                android:text="location"
                app:scale_height="70"
                app:scale_left="320"
                app:scale_textsize="45"
                app:scale_top="125"
                app:scale_width="610" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounding_background"
                app:scale_height="210"
                app:scale_left="30"
                app:scale_top="250"
                app:scale_width="1020" />


        <TextView
                android:id="@+id/today_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                app:scale_height="110"
                app:scale_left="30"
                app:scale_textsize="70"
                app:scale_top="250"
                app:scale_width="340"/>

        <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="@string/today_contribution"
                android:gravity="center"
                android:textColor="#FFFFFF"
                app:scale_height="100"
                app:scale_left="30"
                app:scale_textsize="45"
                app:scale_top="350"
                app:scale_width="340"/>

        <TextView
                android:id="@+id/max_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:text="0"
                android:textColor="#FFFFFF"
                app:scale_height="110"
                app:scale_left="370"
                app:scale_textsize="70"
                app:scale_top="250"
                app:scale_width="340" />

        <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="@string/max_contribution"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                app:scale_height="100"
                app:scale_left="370"
                app:scale_textsize="45"
                app:scale_top="350"
                app:scale_width="340" />

        <TextView
                android:id="@+id/year_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:text="0"
                android:textColor="#FFFFFF"
                app:scale_height="110"
                app:scale_left="710"
                app:scale_textsize="70"
                app:scale_top="250"
                app:scale_width="340" />

        <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="@string/year_contribution"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                app:scale_height="100"
                app:scale_left="710"
                app:scale_textsize="45"
                app:scale_top="350"
                app:scale_width="340" />

        <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/main_tab_smart_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:stl_indicatorAlwaysInCenter="false"
                app:stl_indicatorWithoutPadding="false"
                app:stl_indicatorInFront="false"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorColor="@color/stCommit"
                app:stl_indicatorThickness="3dp"
                app:stl_indicatorWidth="auto"
                app:stl_indicatorCornerRadius="2dp"
                app:stl_overlineColor="@color/fiCommit"
                app:stl_overlineThickness="0dp"
                app:stl_underlineColor="@color/colorTopBar"
                app:stl_underlineThickness="1dp"
                app:stl_dividerColor="@color/colorTopBar"
                app:stl_dividerThickness="1dp"
                app:stl_defaultTabBackground="?attr/selectableItemBackground"
                app:stl_defaultTabTextAllCaps="true"
                app:stl_defaultTabTextColor="@color/colorText"
                app:stl_defaultTabTextSize="15sp"
                app:stl_defaultTabTextHorizontalPadding="10dp"
                app:stl_defaultTabTextMinWidth="100dp"
                app:stl_distributeEvenly="false"
                app:stl_clickable="true"
                app:stl_titleOffset="24dp"
                app:stl_drawDecorationAfterTab="false"
                app:scale_height="150"
                app:scale_top="470"
                app:scale_width="1080"/>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_tab_smart_layout"
                app:scale_height="1300"
                app:scale_top="620"
                app:scale_width="1080"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</FrameLayout>